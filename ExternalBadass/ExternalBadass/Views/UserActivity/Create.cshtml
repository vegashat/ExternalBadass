@model ExternalBadass.ViewModels.UserActivityViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>UserActivity</legend>

            @Html.Hidden("UserActivity.User.Username", Model.CurrentUser.Username)

         <div class="editor-label">
            @Html.LabelFor(model => model.CurrentUser.Username)
        </div>
        <div class="editor-field">
            @Html.DropDownList("UserActivity.User.UserId", Model.UserSelectList)
        </div>
         <div class="editor-label">
            <label for="UserActivity.ActivityId">Date</label>
        </div>
        <div class="editor-field">
            @Html.TextBox("UserActivity.Date",DateTime.Now.ToShortDateString() )
        </div>
         <div class="editor-label">
            <label for="UserActivity.ActivityId">Activity</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("UserActivity.Activity.ActivityId", Model.ActivitySelectList)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
