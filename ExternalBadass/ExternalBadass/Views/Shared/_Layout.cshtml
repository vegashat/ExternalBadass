<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css" rel="stylesheet">
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class='navbar'>
        <div class='navbar-inner'>
            <div class='container-fluid'>

                @Html.ActionLink("External Badass", "index", "menu", new { area = "" }, new { @class = "brand" })
                <ul class='nav'>
                    
                </ul><div class="input-prepend">
                    <span class="add-on"><i class="icon-user icon-white"></i></span>
                    <label>@HttpContext.Current.User.Identity.Name</label>
                </div>
            </div>

        </div>
    </div>

    <div class="container">
        <div class="content">@RenderBody()</div>
        <footer>
            <p class="pull-right">
                <a href="#">Back to top</a>
            </p>
            <p>Training for the Tough Mudder</p>
        </footer>
    </div>
</body>


@RenderSection("Scripts", false)
</html>

