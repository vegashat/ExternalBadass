<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/css/bootstrap-combined.min.css" rel="stylesheet">
    <link href="~/Content/datepicker.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/fullcalendar.css" rel="stylesheet" />
    <style>
        html, body
        {
            background-color: #eee;
        }

        body
        {
            padding-top: 40px;
        }

        section
        {
            padding-top: 40px;
        }

        .navbar-fixed-top
        {
            margin-bottom: 0;
        }

        .content
        {
            background-color: #fff;
            padding: 0 20px 20px 20px;
            margin: 0 -20px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
            box-shadow: 0 1px 2px rgba(0,0,0,.15);
        }

        .container
        {
        }

        h1
        {
            font-size: 26px;
        }

            h1 small
            {
                font-size: 16px;
            }

        .size-display
        {
            color: #999;
        }

        textarea
        {
            width: 515px;
        }

        footer
        {
            margin-top: 20px;
            padding: 10px 0 20px;
        }

            footer p
            {
                color: #aaa;
                text-shadow: 1px 1px 1px #fff;
            }
    </style>
</head>

<body data-spy="scroll">
    <div class='navbar navbar-fixed-top'>
        <div class='navbar-inner'>
            <div class='container'>

                @Html.ActionLink("External Badass", "index", "home", new { area = "" }, new { @class = "brand" })

                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a>

                <div class="nav-collapse">
                    <ul class='nav'>
                        <li>
                            @Html.ActionLink("Activities", "index", "userActivity", new { username = HttpContext.Current.User.Identity.Name }, new { })
                        </li>
                        <li>
                            @Html.ActionLink("Incentives", "index", "incentive", new { username = HttpContext.Current.User.Identity.Name }, new { })
                        </li>

                        <li>
                            @Html.ActionLink("Measurements", "index", "measurement", new { username = HttpContext.Current.User.Identity.Name }, new { })
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Maintenance
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li role="presentation">@Html.ActionLink("Activity", "index", "activity", null, new {role="menuitem" })</li>
                            </ul>
                        </li>
                        @RenderSection("menu", false)
                    </ul>
                </div>


                <ul class="nav pull-right">
                    <li><a href="@Url.Action("edit", "user", new { username = HttpContext.Current.User.Identity.Name })" >
                        <i class="icon-user"></i>@HttpContext.Current.User.Identity.Name</a></li>
                </ul>
            </div>

        </div>

    </div>


    <div class="container">
        <div class="content">@RenderBody()</div>

        <footer class="navbar navbar-fixed-bottom">
            <div class="container">
                <p class="pull-right">
                    <a href="#">Back to top</a>
                </p>
                <p>Training for the Tough Mudder</p>
            </div>
        </footer>
    </div>
</body>

<script src="~/Scripts/jquery-1.8.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<script src="http://d3js.org/d3.v3.min.js"></script>
<script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/js/bootstrap.min.js"></script>
<script src="~/Scripts/fullcalendar.min.js"></script>

@RenderSection("Scripts", false)

<script type="text/javascript">

    $(function ()
    {
        $('.datepicker').datepicker()
    });

</script>

</html>

