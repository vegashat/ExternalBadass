@model IEnumerable<ExternalBadass.Models.Incentive>

@{
    ViewBag.Title = "Index";
}

<h2>Incentives for @ViewBag.Username</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { username = ViewBag.Username })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PointTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PointsEarned)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PercentComplete)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PointTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PointsEarned)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PercentComplete)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Deadline)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IncentiveId }) |
            @Html.ActionLink("Details", "Details", new { id=item.IncentiveId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IncentiveId })
        </td>
    </tr>
}

</table>
